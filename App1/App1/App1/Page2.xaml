<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page2">
    <StackLayout>
        <ListView x:Name="ListaDoNauki" SeparatorColor="DeepSkyBlue">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding JezykRodzinny}" Detail="{Binding JezykObcy}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>