<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="App1.ContentPage2"
             BackgroundColor="White">

    <StackLayout Padding="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <!-- Prostokąt z fiszką -->
        <Frame x:Name="fiszkaFrame"
               BackgroundColor="LightGray"
               CornerRadius="20"
               HasShadow="True"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               HeightRequest="300"
               WidthRequest="300"
               IsClippedToBounds="True">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Button BackgroundColor="LightGray" x:Name="fiszkaLabel" Text="Fiszka" FontSize="24" Clicked="fiszkaLabel_Clicked" WidthRequest="750" HeightRequest="200"/>
            </StackLayout>
        </Frame>

        <!-- Przyciski "Znam" i "Nie znam" -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button x:Name="b1" Text="Znam" Clicked="OnKnowClicked" />
            <Button x:Name="b2" Text="Nie znam" Clicked="OnDontKnowClicked" />
        </StackLayout>
    </StackLayout>

</ContentPage>
